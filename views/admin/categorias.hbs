
{{>header}}
<h1> Lista de Categorias</h1>
<a href="/admin/categorias/add"><button class="btn">Nova categoria</button></a>

{{#each categorias}}
<div class="card">
    <h4>{{nome}}</h4>
    <h4>{{slug}}</h4>
<a href="/admin/categorias/edit/{{_id}}"><button class="btn">Editar categoria</button></a>
<form action="/admin/categorias/deletar" method="POST">
    <input type="hidden" name="id" value="{{_id}}">
    <button class="btn" type="submit">Deletar categoria</button>
</form>
</div>
{{else}}
<h1>Nenhuma categoria registrada</h1>

{{/each}}